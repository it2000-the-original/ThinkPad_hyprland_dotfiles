{
	"$schema": "/etc/xdg/swaync/configSchema.json",
	"positionX": "right",
	"positionY": "top",

	"layer": "overlay",
	"layer-shell": true,
	"cssPriority": "application",
	"control-center-layer": "top",

	"control-center-margin-top": 20,
	"control-center-margin-bottom": 20,
	"control-center-margin-right": 20,
	"control-center-margin-left": 20,
	"control-center-height": 600,
	"control-center-width": 500,

	"notification-icon-size": 64,
	"notification-2fa-action": true,
	"notification-window-width": 400,
	"notification-inline-replies": false,
	"notification-body-image-width": 200,
	"notification-body-image-height": 100,

	"timeout": 8,
	"timeout-low": 4,
	"timeout-critical": 0,

	"fit-to-screen": true,
	"keyboard-shortcuts": true,
	"relative-timestamps": true,
	"image-visibility": "when-available",
	"transition-time": 200,
	"hide-on-clear": false,
	"hide-on-action": true,
	"script-fail-notify": true,

	"scripts": {

		"update-script": {

			"exec": "echo none",
			"urgency": "Normal",
			"run-on": "action"
		}
	},

	"widgets": [

		"mpris",
		"inhibitors",
		"title",
		"dnd",
		"notifications",
		"volume",
		"backlight",
		"buttons-grid"
	],

	"widget-config": {

		"inhibitors": {

			"text": "Notifications",
			"button-text": "Clear All",
			"clear-all-button": true
		},

		"title": {

			"text": "Notifications",
			"button-text": "Clear All",
			"clear-all-button": true
		},

		"dnd": {

			"text": "Do Not Disturb"
		},

		"mpris": {

			"image-size": 64,
			"image-radius": 5
		},

		"volume": {

			"label": " 󰕾 "
		},

		"backlight": {

			"label": "  ",

      // Remember to change this if you
      // aren't using an intel gpu
			"device": "intel_backlight",

			"min": 1
		},

		"buttons-grid": {

			"actions": [

				{
					"label": "",
					"active": true,
					"type": "toggle",
					"command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
					"update-command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
				},
				{
					"label": "",
					"active": true,
					"type": "toggle",
					"command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && bluetoothctl power on || bluetoothctl power off'",
					"update-command": "sh -c '[[ $(bluetoothctl show | grep \"Powered\" | awk \"{print \\$2}\") == \"yes\" ]] && echo true || echo false'"
				},
				{
					"label": "",
					"active": false,
					"type": "toggle",
					"command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && rfkill block all || rfkill unblock all'",
					"update-command": "sh -c '[[ -z $(rfkill list | grep \"Soft blocked: no\") ]] && echo true || echo false'"
				},
				{
					"label": "",
					"active": true,
					"type": "toggle",
					"command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && gammastep || killall gammastep'",
					"update-command": "sh -c '[[ -z $(ps aux | grep gammastep | grep -v grep) ]] && echo false || echo true'"
				},
				{
					"label": "",
					"active": false,
					"type": "toggle",
					"command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && killall hypridle || hypridle'",
					"update-command": "sh -c '[[ -z $(ps aux | grep hypridle | grep -v grep) ]] && echo true || echo false'"
				},
				{
					"label": "",
					"active": true,
					"type": "normal",
					"command": "sh -c 'swaync-client -t && wlogout --protocol layer-shell'"
				}
			]
		}
	}
}
